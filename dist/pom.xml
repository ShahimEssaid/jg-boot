    <groupId>com.essaid.jg.boot</groupId>
    <artifactId>com.essaid.jg.boot.dist</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <com.essaid.jg.boot.version>0.1.4-SNAPSHOT</com.essaid.jg.boot.version>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.source>11</maven.compiler.source>
        <spring-boot.version>2.7.14</spring-boot.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.essaid.jg.boot</groupId>
            <artifactId>com.essaid.jg.boot.boot</artifactId>
            <version>${com.essaid.jg.boot.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <attach>false</attach>
                            <classifier>boot</classifier>
                            <mainClass>com.essaid.jg.boot.JGBoot</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>${maven-antrun-plugin.version}</version>
                    <dependencies>
                        <dependency>
                            <groupId>ant-contrib</groupId>
                            <artifactId>ant-contrib</artifactId>
                            <version>1.0b3</version>
                            <exclusions>
                                <exclusion>
                                    <groupId>ant</groupId>
                                    <artifactId>ant</artifactId>
                                </exclusion>
                            </exclusions>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>



    <profiles>
        <profile>
            <id>jg-dist-setup</id>
            <activation>
                <file>
                    <missing>bin/setup.sh</missing>
                    <exists>src</exists>
                </file>

            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>3.6.0</version>
                        <executions>
                            <execution>
                                <id>dist-setup</id>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <artifact>
                                        com.essaid.jg.boot:com.essaid.jg.boot.boot:${com.essaid.jg.boot.version}:zip:dist
                                    </artifact>
                                    <outputDirectory>${project.basedir}</outputDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>jg-jdk-amd64-linux</id>
            <activation>
                <os>
                    <name>linux</name>
                    <arch>amd64</arch>
                </os>
            </activation>
            <properties>
                <jdk-tag>jdk-11.0.20%2B8</jdk-tag>
                <jdk-file>OpenJDK11U-jdk_x64_linux_hotspot_11.0.20_8.tar.gz</jdk-file>
                <jdk-file-type>tar.gz</jdk-file-type>
            </properties>
        </profile>

        <profile>
            <id>jg-jdk-setup</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>jdk-setup</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <target xmlns:unless="ant:unless">
                                        <taskdef resource="net/sf/antcontrib/antcontrib.properties"
                                                 classpathref="maven.plugin.classpath"/>
                                        <get src="https://github.com/adoptium/temurin11-binaries/releases/download/${jdk-tag}/${jdk-file}"
                                             dest="${project.basedir}"
                                             skipexisting="true">
                                        </get>
                                        <condition property="jdk.exists">
                                            <available file="jdk" type="dir"/>
                                        </condition>
                                        <if unless:set="jdk.exists">
                                            <equals arg1="${jdk-file-type}" arg2="tar.gz"/>
                                            <then>
                                                <untar src="${project.basedir}/${jdk-file}"
                                                       dest="${project.basedir}/jdk"
                                                       compression="gzip">
                                                    <cutdirsmapper dirs="1"/>
                                                </untar>
                                                <chmod perm="+x" dir="${project.basedir}/jdk/bin" includes="**/*"
                                                       verbose="true"/>
                                            </then>
                                        </if>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>
</project>